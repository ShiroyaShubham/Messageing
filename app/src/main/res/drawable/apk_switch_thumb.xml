<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="@color/thumb" />
            <corners android:radius="100dp" />
            <size android:width="25dp" android:height="25dp" />
            <stroke android:width="7dp" android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <gradient android:startColor="@color/blue"
                android:endColor="@color/purple"/>
            <corners android:radius="100dp" />
            <size android:width="25dp" android:height="25dp" />
            <stroke android:width="7dp" android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>
