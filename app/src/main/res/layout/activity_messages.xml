<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardToolbar"
        style="@style/Toolbard_Card"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/header"
            layout="@layout/layout_header" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardToolbar"
        android:layout_marginBottom="@dimen/margin_2">

        <RelativeLayout
            android:id="@+id/thread_add_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <View style="@style/Devider_1PX" />

            <LinearLayout
                android:id="@+id/llAddedContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/confirm_manage_contacts"
                android:orientation="horizontal"
                android:padding="@dimen/margin_16">

                <TextView
                    style="@style/Text_Light_Grey"
                    android:text="To:"
                    android:textSize="@dimen/margin_16" />

                <LinearLayout
                    android:id="@+id/selected_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:orientation="vertical" />

            </LinearLayout>

            <View
                style="@style/Devider_1PX"
                android:layout_below="@+id/llAddedContact" />


            <ImageView
                android:id="@+id/confirm_manage_contacts"
                style="@style/Icon_48DP"
                android:layout_alignParentEnd="true"
                android:foreground="@drawable/logo_ripple_oval"
                android:padding="@dimen/margin_10"
                android:src="@drawable/icon_add" />


            <AutoCompleteTextView
                android:id="@+id/add_contact_or_number"
                style="@style/EditText"
                android:layout_below="@+id/llAddedContact"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:completionThreshold="2"
                android:gravity="center_vertical"
                android:hint="@string/add_contact_or_number"
                android:inputType="textCapWords" />

            <View
                style="@style/Devider_1PX"
                android:layout_below="@+id/add_contact_or_number" />
        </RelativeLayout>


        <messenger.messages.messaging.sms.chat.meet.views.CustomRecyclerView
            android:id="@+id/myRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llBottom"
            android:layout_below="@+id/thread_add_contacts"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:stackFromEnd="true" />

        <messenger.messages.messaging.sms.chat.meet.views.FastScrolling
            android:id="@+id/thread_messages_fastscroller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/margin_12">

            <include layout="@layout/app_fastscroller_handle_vertical" />

        </messenger.messages.messaging.sms.chat.meet.views.FastScrolling>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/screen_background_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llReplies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/screen_background_color"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/thread_attachments_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/thread_attachments_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_60"
                        android:divider="@drawable/linear_layout_horizontal_divider"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/margin_12"
                        android:paddingEnd="@dimen/margin_12"
                        android:showDividers="middle" />

                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/Icon_48DP"
                        android:layout_marginStart="@dimen/margin_5"
                        android:background="@drawable/bg_gradient_circle"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible"
                        app:contentPadding="@dimen/_12sdp"
                        app:shapeAppearanceOverlay="@style/circleImageView"
                        app:tint="@color/white" />

                    <EditText
                        android:id="@+id/thread_type_message"
                        style="@style/Text_manrope_Medium_8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_round_corner_10"
                        android:backgroundTint="@color/light_grey"
                        android:hint="@string/app_write_a_message"
                        android:inputType="textCapSentences|textMultiLine"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColorHint="#949494" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/logo_ripple_oval">

                        <ImageView
                            android:id="@+id/thread_select_sim_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/margin_4"
                            android:paddingStart="@dimen/margin_8"
                            android:paddingTop="@dimen/margin_12"
                            android:paddingEnd="@dimen/margin_8"
                            android:paddingBottom="@dimen/margin_12"
                            android:src="@drawable/icon_sim"
                            android:visibility="gone"
                            app:tint="@color/dark_blue" />

                        <TextView
                            android:id="@+id/thread_select_sim_number"
                            style="@style/Text_White"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textSize="@dimen/textsize_14"
                            android:visibility="gone"
                            tools:text="1" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/thread_send_message"
                        style="@style/Icon_48DP"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:clickable="false"
                        android:contentDescription="@string/ok"
                        android:padding="@dimen/margin_10"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        android:src="@drawable/ic_send_vector" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNotReplies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/screen_background_color"
                android:elevation="@dimen/margin_10"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/Devider_1PX" />

                <RelativeLayout
                    style="@style/Icon_48DP"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_sender_does_not_support_replies"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textsize_14" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/laySimSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/tra_white"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/laySim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:id="@+id/laySim02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:foreground="@drawable/logo_ripple_oval"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSim2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_4"
                    android:src="@drawable/icon_sim"
                    app:tint="@color/dark_blue"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSim2"
                    style="@style/Text_White"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    app:tint="@color/dark_blue"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14"
                    android:visibility="visible"
                    tools:text="2" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSim2Signal"
                style="@style/Text_manrope_Regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/txtSim2No"
                app:layout_constraintEnd_toStartOf="@+id/laySim02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="4444444" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSim2No"
                style="@style/Text_manrope_Regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/laySim02"
                app:layout_constraintTop_toBottomOf="@+id/txtSim2Signal"
                tools:text="9852485458" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/laySim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/laySim2"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:id="@+id/laySim01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:foreground="@drawable/logo_ripple_oval"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSim1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_4"
                    app:tint="@color/dark_blue"
                    android:src="@drawable/icon_sim"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSim1"
                    style="@style/Text_White"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSim1Signal"
                style="@style/Text_manrope_Regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/txtSim1No"
                app:layout_constraintEnd_toStartOf="@+id/laySim01"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="4444444" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSim1No"
                style="@style/Text_manrope_Regular_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/laySim01"
                app:layout_constraintTop_toBottomOf="@+id/txtSim1Signal"
                tools:text="9852485458" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/thread_add_attachment"
        style="@style/Icon_48DP"
        android:layout_marginStart="@dimen/margin_5"
        android:background="@drawable/bg_gradient_circle"
        android:src="@drawable/ic_plus"
        android:layout_alignParentBottom="true"
        app:contentPadding="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/rel_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#66000000"
        android:elevation="@dimen/_10sdp"
        android:gravity="bottom|start"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivContact"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:background="@color/white"
                android:src="@drawable/ic_contact"
                app:contentPadding="@dimen/_8sdp"
                app:shapeAppearanceOverlay="@style/circleImageView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text_manrope_Medium_14"
                android:textSize="@dimen/_14ssp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/white"
                android:text="@string/app_contact"/>
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivContactCancel"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/bg_gradient_circle"
            android:src="@drawable/ic_close"
            app:contentPadding="@dimen/_13sdp"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:tint="@color/white" />


    </LinearLayout>

</RelativeLayout>
