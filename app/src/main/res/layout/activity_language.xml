<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:id="@+id/clMain"
    tools:context="messenger.messages.messaging.sms.chat.meet.activity.LanguageActivity">


    <include
        android:id="@+id/header"
        layout="@layout/layout_header"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLanguage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_7sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mBannerAds"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <FrameLayout
        android:id="@+id/mBannerAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llNativeShimmer"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center">

            <include
                layout="@layout/layout_native_video_shimmer" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/mNativeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
