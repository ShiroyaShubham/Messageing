<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/bg_dotted_round_corner_10"
    android:focusable="true"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <RelativeLayout
            android:id="@+id/rlTopIcon"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@drawable/bg_gradient_circle">

            <ImageView
                android:id="@+id/ivThumb"
                style="@style/Icon_64DP"
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_user" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFirstLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                style="@style/Text_manrope_Semi_Bold_14"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16">

            <ImageView
                android:id="@+id/ivPinThumb"
                style="@style/Icon_16DP"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_pic_cross" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rlTopIcon">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvConversationTitle"
                style="@style/Text_manrope_Semi_Bold_14"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tvDate"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:paddingEnd="@dimen/margin_16"
                tools:text="VX-FMA09K" />

            <messenger.messages.messaging.sms.chat.meet.views.GradientTextView
                android:id="@+id/tvDate"
                style="@style/Text_manrope_Medium_10"
                android:textColor="@color/text_grey"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_13sdp"
                android:textSize="@dimen/textsize_12"
                tools:text="18:20" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTitle"
            android:layout_toEndOf="@+id/rlTopIcon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDraftIndicator"
                style="@style/Text_Blue_Italic"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="@dimen/margin_4"
                android:text="@string/txt_draft"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tvConversationDesc"
                style="@style/Text_manrope_Medium_10"
                android:ellipsize="end"
                android:textColor="@color/text_grey"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_10sdp"
                android:maxLines="2"
                android:paddingEnd="@dimen/margin_16"
                tools:text="Hey, How are you!!" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgUnread"
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_gravity="end"
                android:visibility="gone"
                android:background="@drawable/bg_gradient_circle"
                android:layout_marginEnd="@dimen/_13sdp"
                app:shapeAppearanceOverlay="@style/circleImageView"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
