<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/bg_dotted_round_corner_10"
        android:paddingTop="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_16">

        <RelativeLayout
            android:id="@+id/rlTopIcon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@drawable/bg_gradient_circle">

            <ImageView
                android:id="@+id/ivThumb"
                style="@style/Icon_64DP"
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_user" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtFirstLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@color/white"
                style="@style/Text_manrope_Semi_Bold_13"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvConversationTitle"
            style="@style/Text_manrope_Semi_Bold_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvConversationDate"
            android:layout_toEndOf="@+id/rlTopIcon"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:paddingEnd="@dimen/margin_16"
            tools:text="VX-FMA09K" />

        <TextView
            android:id="@+id/tvConversationDate"
            style="@style/Text_manrope_Medium_8"
            android:layout_alignTop="@+id/tvConversationTitle"
            android:layout_alignBottom="@+id/tvConversationTitle"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_grey"
            android:layout_marginEnd="@dimen/_13sdp"
            tools:text="18:20" />

        <TextView
            android:id="@+id/tvConversationDesc"
            style="@style/Text_manrope_Medium_8"
            android:textSize="@dimen/textsize_14"
            android:layout_below="@+id/tvConversationTitle"
            android:layout_toEndOf="@+id/rlTopIcon"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_grey"
            android:gravity="left"
            android:maxLines="2"
            android:paddingEnd="@dimen/margin_16"
            tools:text="Hey, How are you!!" />

    </RelativeLayout>


</LinearLayout>
