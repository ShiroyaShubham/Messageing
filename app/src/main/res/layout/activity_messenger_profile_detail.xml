<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    tools:context=".MessengerProfileDetailActivity">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <LinearLayout
        android:id="@+id/llTopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_gradient"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageView" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgPlaceHolder"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_user"
                app:shapeAppearanceOverlay="@style/circleImageView" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtName"
                style="@style/Text_manrope_Semi_Bold_12"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="Rashmika Mandana" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPhoneNo"
                style="@style/Text_manrope_Medium_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="+918480283020"
                android:textColor="@color/text_grey" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgAddUser"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:tint="@color/grayish"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_add_user" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgColorPallete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="gone"
            android:src="@drawable/ic_color_pallate" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/llTopView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/line">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNotification"
            style="@style/Text_manrope_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_notification"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/app_notification"
            app:drawableTint="@color/convertable_grey"
            android:textColor="@color/convertable_grey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtArchived"
            style="@style/Text_manrope_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_archived"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/app_archived"
            app:drawableTint="@color/convertable_grey"
            android:textColor="@color/convertable_grey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtUnArchived"
            style="@style/Text_manrope_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_archived"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/app_unarchived"
            android:visibility="gone"
            app:drawableTint="@color/convertable_grey"
            android:textColor="@color/convertable_grey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtBlock"
            style="@style/Text_manrope_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_block"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/app_block"
            app:drawableTint="@color/convertable_grey"
            android:textColor="@color/convertable_grey" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDeleteConversation"
            style="@style/Text_manrope_Medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_grey_delete"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/app_delete_conversation"
            app:drawableTint="@color/convertable_grey"
            android:textColor="@color/convertable_grey" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
