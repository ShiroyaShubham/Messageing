<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    tools:context=".activity.ActivityArchivedMessage">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/mBannerAdsContainer"
        android:orientation="vertical">

        <com.qtalk.recyclerviewfastscroller.RecyclerViewFastScroller
            android:id="@+id/conversations_fastscroller"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <messenger.messages.messaging.sms.chat.meet.views.CustomRecyclerView
                android:id="@+id/recyclerViewChatHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollIndicators="none"
                android:layout_marginBottom="@dimen/_7sdp"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        </com.qtalk.recyclerviewfastscroller.RecyclerViewFastScroller>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNoDataFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@id/mBannerAdsContainer"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvNoContact"
            style="@style/Text_Regular"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:textColor="@color/text_grey"
            android:text="@string/app_your_arhived_conversation_appear_here"
            android:textSize="@dimen/textsize_16" />

    </LinearLayout>

    <include
        android:id="@+id/mBannerAdsContainer"
        layout="@layout/ad_banner_shimmer_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
