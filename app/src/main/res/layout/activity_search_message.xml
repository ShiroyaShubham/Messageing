<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/screen_background_color"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|enterAlways">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|enterAlways">


                    <LinearLayout
                        android:id="@+id/llHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/textsize_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:backgroundTint="@color/light_grey"
                            android:background="@drawable/bg_gradient_round_corner_25"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_8sdp"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:transitionName="@string/txt_transition_1">

                            <ImageView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_search"
                                />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etSearchText"
                                style="@style/Text_manrope_Medium_10"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:inputType="text"
                                android:textColorHint="@color/text_grey"
                                android:ellipsize="end"
                                android:imeOptions="actionSearch"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/app_search_number_name"
                                android:textSize="@dimen/textsize_14" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCancel"
                            style="@style/Text_Blue"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/textsize_16"
                            android:text="@string/cancel" />
                    </LinearLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <messenger.messages.messaging.sms.chat.meet.views.CustomRecyclerView
                    android:id="@+id/recyclerViewsSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:scrollbars="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <messenger.messages.messaging.sms.chat.meet.views.CustomRecyclerView
                    android:id="@+id/recyclerSearchContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/recyclerViewsSuggestions"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivThumbNodata"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:src="@drawable/icon_placeholder" />

                    <TextView
                        android:id="@+id/tvNoData1"
                        style="@style/Text_Grey_Bold"
                        android:layout_marginTop="@dimen/textsize_16"
                        android:gravity="center"
                        android:text="@string/no_items_found"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/tvNoData2"
                        style="@style/Text_Grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/type_2_characters"
                        android:textSize="@dimen/textsize_14" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>


</RelativeLayout>
